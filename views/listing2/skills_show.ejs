<%layout("layouts/boilerplate")%>
<style>
    .main{
        padding: 50px;
    }
</style>
<body>
    

<div class="main">
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h2>Enter The Following Details</h2>
            <form action="/skills" method="post"  class="needs-validation" novalidate >
