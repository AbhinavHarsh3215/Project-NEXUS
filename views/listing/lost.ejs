                            <option value="GD Naidu Block">GD Naidu Block</option>
                            <option value="MH - A Block">MH - A Block</option>
                            <option value="MH - B Block">MH - B Block</option>
                            <option value="MH - B Annex">MH - B Annex</option>
                            <option value="MH - C Block">MH - C Block</option>
                            <option value="MH - D Block">MH - D Block</option>
                            <option value="MH - D Annex">MH - D Annex</option>
                            <option value="MH - E Block">MH - E Block</option>
                            <option value="MH - F Block">MH - F Block</option>
