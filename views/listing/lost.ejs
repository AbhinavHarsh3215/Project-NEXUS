                        </select>
                            <div class="invalid-feedback">Location should be valid</div>
                    </div>
                    <div class="mb-3 col-md-6">
                        <label for="date" class="form-label">Lost Date</label>
                        <input name="obj[lostDate]" class="form-control change" type="date" required/>
                        <div class="invalid-feedback">Date is required</div>
                    </div>
                </div>
                <div class="row">
                    
                    <div class="mb-3 col-md-6">
                        <label for="keyword" class="form-label" >Category</label>
                        <select name="obj[keywords]" id="keyword" required class="form-control change" onchange="updateKeyword2Options()">
                            <option disabled selected value> -- select an option -- </option>
                            <option value="academic materials">Academic Materials</option>
                            <option value="clothing">Clothing and Shoes</option>
                            <option value="electronics">Electronics</option>
                            <option value="jewellery">Jewellery</option>
                            <option value="personal accessories">Personal Accessories</option>
                            <option value="sports gear">Sports Gear</option>
                            <option value="transportation">Transportation</option>
                            <option value="miscellaneous">Miscellaneous</option>
                            <option value="important documents">Important Documents</option>
                            <option value="technology accessories">Technology Accessories</option>
                            <option value="musical instruments">Musical Instruments</option>
                            <option value="room keys">Room Keys</option>
                        </select>
                        <div class="invalid-feedback">Please enter a short description</div>
                    </div>
                    <div class="mb-3 col-md-6">
                        <label for="keyword2" class="form-label" >Sub-Category</label>
                        <select name="obj[keywords2]" id="keyword2" required class="form-control change" >
                            
                        </select>
                        <div class="invalid-feedback">Please enter a short description</div>
                    </div>
                </div>
                <div class="row">
                    
                    <div class="mb-3 col-md-6">
                        <label for="color" class="form-label" >Colour</label>
                        <select name="obj[color]" id="color" required class="form-control change">
                            <option value="Black">Black</option>
                                <option value="White">White</option>
                                <option value="Gray">Gray</option>
                                <option value="Brown">Brown</option>
                                <option value="Blue">Blue</option>
                                <option value="Red">Red</option>
                                <option value="Green">Green</option>
                                <option value="Yellow">Yellow</option>
                                <option value="Orange">Orange</option>
                                <option value="Pink">Pink</option>
                        </select>
                        <div class="invalid-feedback">Please enter a short description</div>
                    </div>
                    <div class="mb-3 col-md-6">
                        <label for="brand" class="form-label" >Brand Name</label>
                        <input type="text" name="obj[brand]" placeholder="Enter the name of the brand" class="form-control change">
                        <div class="invalid-feedback">Please enter a short description</div>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea name="obj[description]" placeholder="enter description" type="text" class="form-control change" required></textarea>
                    <div class="invalid-feedback">Please enter a short description</div>
                </div>
                <button class="btn btn-dark add-btn mt-3 change2" type="submit">Add</button>
            </form>
        </div>
    </div>

</div>
</body>
<script>
    function updateKeyword2Options() {
  var keyword = document.getElementById("keyword");
  var keyword2 = document.getElementById("keyword2");
  
  // Clear existing options
  keyword2.innerHTML = "";
  
  // Get selected value from keyword
  var selectedValue = keyword.value;
  
  // Add options to keyword2 based on selectedValue
  if (selectedValue === "academic materials") {
    keyword2.add(new Option("Textbooks", "textbooks"));
    keyword2.add(new Option("Notebooks", "notebooks"));
    keyword2.add(new Option("Stationery", "stationery"));
