<%layout("layouts/boilerplate")%>
<div class="row mt-3">
    <h1 class="col-6 offset-3 mt-3">SignUp on Lost & Found</h1>
    <div class="col-6 offset-3 mt-3 mb-3">
        <form action="/signup" method="post" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">username</label>
                <input name="username" id="username" placeholder="username" type="text" class="form-control" required/>
                <div class="valid-feedback">Looks good</div>
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input name="email" id="email" placeholder="email" type="email" class="form-control" required/>
            </div>
            <div class="mb-3">
                <label for="ph" class="form-label">Number</label>
                <input name="phone" id="ph" placeholder="Phone no" type="number" class="form-control" required/>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input name="password" id="password" placeholder="password" type="password" class="form-control" required/>
            </div>
            <button class="btn btn-success">SingUp</button>
        </form>
        <br><br><br>
    </div>
</div>

