<%layout("layouts/boilerplate")%>
<style>
    .glass{
            background: linear-gradient(135deg,rgba(255,255,255,0.2),rgba(255,255,255,0));
            backdrop-filter: blur(10px);
            -webkit-backdrop-filter: blur(10px);
            border-radius: 20px;
            border: 1px solid rgba(255,255,255,0.18);
            box-shadow: 0 8px 32px 0 rgba(0,0,0,0.37);
        }
    .change{
        margin: 250px;
        padding-top:50px ;
        padding-bottom:20px ;
    }
    .change7{
        background-color: transparent;
    }
</style>
<br><br>
<div class="row mt-3  glass change">
    <h1 class="col-6 offset-2 mt-3">SignUp on NEXUS</h1>
    <div class="col-8 offset-2 mt-3 mb-3">
        <form action="/signup" method="post" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">username</label>
                <input name="username" id="username" placeholder="username" type="text" class="form-control" required/>
                <div class="valid-feedback">Looks good</div>
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input name="email" id="email" placeholder="email" type="email" class="form-control" required/>
            </div>
            <div class="mb-3 row">
                <div class="col-6">
                <label for="college" class="form-label">College Name</label>
                <select name="obj[college]" required class="form-control">
                    <option value="VIT">VIT vellore</option>
                    <option value="VIT">VIT chennai</option>
                    <option value="VIT">VIT bhopal</option>
                </select>
                </div>
                <div class="col-6">
                    <label for="ph" class="form-label">Number</label>
                    <input name="phone" id="ph" placeholder="Phone no" type="number" class="form-control" required/>
                </div>
            </div>
            <div class="mb-3">
               
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input name="password" id="password" placeholder="password" type="password" class="form-control" required/>
            </div>
            <button class="btn btn-success">SingUp</button>

        </form>
        <div class="row offset-4 mt-3" ><p>Already have an account? &nbsp;&nbsp;&nbsp;<a href="/login"><button class="btn btn-success change7">Login</button></a></p></div>
        <br>
    </div>
</div>

